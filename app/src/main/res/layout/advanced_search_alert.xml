<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<data>
    <variable name="colorList" type="com.nuclavis.rospark.ColorList" />
</data>
<androidx.constraintlayout.widget.ConstraintLayout  
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight=".85"
    android:elevation="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/alert_background"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/_7sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:gravity="center"
            android:weightSum="10"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:padding="@dimen/_5sdp"
                    android:weightSum="10">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="17dp"
                        android:customImageTint="@{colorList.primaryColor}"
                        android:src="@drawable/close_x_icon"
                        android:id="@+id/advanced_search_alert_close_button"
                        android:layout_weight="1"
                        android:focusableInTouchMode="true"
                        android:contentDescription="@string/mobile_close_modal"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:padding="@dimen/_5sdp"
                    android:id="@+id/advanced_search_alert_heading"
                    android:accessibilityLiveRegion="1"
                    android:weightSum="10">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="9"
                        android:paddingRight="5dp"
                        android:paddingBottom="5dp"
                        android:text="@string/mobile_manage_school_students_advanced_search_modal_title"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:textSize="@dimen/_10sdp"/> 
                    <TextView
                        android:text="@string/mobile_alert_close_button"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:accessibilityLiveRegion="1"/>
                </LinearLayout>
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp"
                android:weightSum="10">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:padding="0dp"
                    android:layout_marginBottom="5dp"
                    android:textStyle="bold"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="#000"
                    android:text="@string/mobile_manage_school_students_advanced_search_modal_last_name" />
                <EditText
                    android:id="@+id/advanced_search_last_name_input"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:background="@{colorList.isWhite ? @drawable/rounded_input_black_border : @drawable/white_rounded_input}"
                    android:inputType="text"
                    android:maxLines="1"
                    android:radius="10dp"
                    android:textColor="#000"
                    android:textSize="@dimen/_11sdp"
                    tools:ignore="SpeakableTextPresentCheck"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp"
                android:weightSum="10">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:padding="0dp"
                    android:layout_marginBottom="5dp"
                    android:textStyle="bold"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="#000"
                    android:text="@string/mobile_manage_school_students_advanced_search_modal_teacher" />
                <EditText
                    android:id="@+id/advanced_search_teacher_input"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:background="@{colorList.isWhite ? @drawable/rounded_input_black_border : @drawable/white_rounded_input}"
                    android:inputType="text"
                    android:maxLines="1"
                    android:radius="10dp"
                    android:textColor="#000"
                    android:textSize="@dimen/_11sdp"
                    tools:ignore="SpeakableTextPresentCheck"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="5dp"
                android:weightSum="10">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:orientation="horizontal"
                    android:weightSum="10">
                    <TextView
                        style="@style/overview_card_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="7dp"
                        android:padding="0dp"
                        android:text="@string/mobile_manage_school_students_advanced_search_modal_grade"
                        android:textSize="@dimen/_10sdp"
                        android:textStyle="bold" />
                </LinearLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center">
                    <Spinner
                        android:id="@+id/advanced_search_grade_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@{colorList.isWhite ? @drawable/rounded_input_black_border : @drawable/white_rounded_input}"
                        android:inputType="text"
                        android:maxLines="1"
                        android:radius="10dp"
                        android:spinnerMode="dropdown"
                        android:textColor="#000"
                        android:contentDescription="@string/mobile_manage_school_students_advanced_search_modal_grade_label"
                        android:textColorHint="#000"
                        android:textSize="@dimen/_11sdp"
                        tools:ignore="SpeakableTextPresentCheck" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|right">
                        <ImageView
                            android:layout_width="@dimen/_8sdp"
                            android:layout_height="@dimen/_8sdp"
                            android:scaleType="fitCenter"
                            android:layout_marginRight="18dp"
                            app:srcCompat="@drawable/down_arrow_icon"
                            android:tint="?colorPrimary"
                            app:tint="?colorPrimary" />
                    </LinearLayout>
                </FrameLayout>      
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp"
                android:weightSum="10">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:padding="0dp"
                    android:layout_marginBottom="5dp"
                    android:textStyle="bold"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="#000"
                    android:text="@string/mobile_manage_school_students_advanced_search_modal_amount_raised" />
                <EditText
                    android:id="@+id/advanced_search_amount_raised_input"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:background="@{colorList.isWhite ? @drawable/rounded_input_black_border : @drawable/white_rounded_input}"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:hint="0.00"
                    android:radius="10dp"
                    android:textColor="#000"
                    android:textSize="@dimen/_11sdp"
                    tools:ignore="SpeakableTextPresentCheck"/>
                <TextView
                    android:id="@+id/amount_raised_error_message"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="0dp"
                    android:visibility="gone"
                    android:textAlignment="center"
                    android:layout_marginBottom="5dp"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="#ff0000"
                    android:text="@string/mobile_manage_school_students_advanced_search_modal_amount_error" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="5dp"
                android:weightSum="10">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:orientation="horizontal"
                    android:weightSum="10">
                    <TextView
                        style="@style/overview_card_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="7dp"
                        android:padding="0dp"
                        android:text="@string/mobile_manage_school_students_advanced_search_modal_amount_filter"
                        android:textSize="@dimen/_10sdp"
                        android:textStyle="bold" />
                </LinearLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center">
                    <Spinner
                        android:id="@+id/advanced_search_amount_filter_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@{colorList.isWhite ? @drawable/rounded_input_black_border : @drawable/white_rounded_input}"
                        android:inputType="text"
                        android:maxLines="1"
                        android:radius="10dp"
                        android:spinnerMode="dropdown"
                        android:textColor="#000"
                        android:textColorHint="#000"
                        android:contentDescription="@string/mobile_manage_school_students_advanced_search_modal_amount_filter_label"
                        android:textSize="@dimen/_11sdp"
                        tools:ignore="SpeakableTextPresentCheck" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|right">
                        <ImageView
                            android:layout_width="@dimen/_8sdp"
                            android:layout_height="@dimen/_8sdp"
                            android:scaleType="fitCenter"
                            android:layout_marginRight="18dp"
                            app:srcCompat="@drawable/down_arrow_icon"
                            android:tint="?colorPrimary"
                            app:tint="?colorPrimary" />
                    </LinearLayout>
                </FrameLayout>      
            </LinearLayout>
            <LinearLayout
                android:id="@+id/advanced_search_badge_type_spinner_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="5dp"
                android:weightSum="10">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:orientation="horizontal"
                    android:weightSum="10">
                    <TextView
                        style="@style/overview_card_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="7dp"
                        android:padding="0dp"
                        android:text="@string/mobile_manage_school_students_advanced_search_modal_badge_type"
                        android:textSize="@dimen/_10sdp"
                        android:textStyle="bold" />
                </LinearLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center">
                    <Spinner
                        android:id="@+id/advanced_search_badge_type_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@{colorList.isWhite ? @drawable/rounded_input_black_border : @drawable/white_rounded_input}"
                        android:inputType="text"
                        android:maxLines="1"
                        android:radius="10dp"
                        android:contentDescription="@string/mobile_manage_school_students_advanced_search_modal_badge_type_label"
                        android:spinnerMode="dropdown"
                        android:textColor="#000"
                        android:textColorHint="#000"
                        android:textSize="@dimen/_11sdp"
                        tools:ignore="SpeakableTextPresentCheck" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|right">
                        <ImageView
                            android:layout_width="@dimen/_8sdp"
                            android:layout_height="@dimen/_8sdp"
                            android:scaleType="fitCenter"
                            android:layout_marginRight="18dp"
                            app:srcCompat="@drawable/down_arrow_icon"
                            android:tint="?colorPrimary"
                            app:tint="?colorPrimary" />
                    </LinearLayout>
                </FrameLayout>      
            </LinearLayout>
            <LinearLayout
                android:id="@+id/advanced_search_badge_status_spinner_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="5dp"
                android:weightSum="10">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:orientation="horizontal"
                    android:weightSum="10">
                    <TextView
                        style="@style/overview_card_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="7dp"
                        android:padding="0dp"
                        android:text="@string/mobile_manage_school_students_advanced_search_modal_badge_status"
                        android:textSize="@dimen/_10sdp"
                        android:textStyle="bold" />
                </LinearLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center">
                    <Spinner
                        android:id="@+id/advanced_search_badge_status_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@{colorList.isWhite ? @drawable/rounded_input_black_border : @drawable/white_rounded_input}"
                        android:inputType="text"
                        android:maxLines="1"
                        android:radius="10dp"
                        android:spinnerMode="dropdown"
                        android:contentDescription="@string/mobile_manage_school_students_advanced_search_modal_badge_status_label"
                        android:textColor="#000"
                        android:textColorHint="#000"
                        android:textSize="@dimen/_11sdp"
                        tools:ignore="SpeakableTextPresentCheck" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|right">
                        <ImageView
                            android:layout_width="@dimen/_8sdp"
                            android:layout_height="@dimen/_8sdp"
                            android:scaleType="fitCenter"
                            android:layout_marginRight="18dp"
                            app:srcCompat="@drawable/down_arrow_icon"
                            android:tint="?colorPrimary"
                            app:tint="?colorPrimary" />
                    </LinearLayout>
                </FrameLayout>      
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:weightSum="10">
                <Button
                    android:id="@+id/advanced_search_alert_search_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:paddingLeft="10dp"
                    android:paddingTop="8dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="8dp"
                    android:textStyle="bold"
                    android:text="@string/mobile_manage_school_students_advanced_search_button"
                    android:textAlignment="center"
                    android:customTextColor="@{colorList.buttonTextColor}"
                    android:customBackgroundTintColor="@{colorList.buttonColor}"
                    android:textSize="@dimen/_11sdp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>