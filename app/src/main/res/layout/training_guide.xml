<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<data>
    <variable name="colorList" type="com.nuclavis.rospark.ColorList" />
</data>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|center"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/training_guide_manage_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_15sdp"
            android:background="@{colorList.isWhite ? @drawable/card_background_white : @drawable/card_background}"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingBottom="@dimen/_15sdp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    style="@style/overview_card_title"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:padding="0dp"
                    android:textSize="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:accessibilityHeading="true"
                    android:textStyle="bold"
                    android:text="@string/mobile_training_guide_manage_title" />
                <LinearLayout
                    android:id="@+id/training_guide_manage_card_help_button"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:gravity="top|right"
                    android:focusable="false"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:gravity="center"
                        android:layout_marginLeft="-25dp"
                        android:minWidth="25dp"
                        android:src="@drawable/help"
                        android:customImageTint="@{colorList.primaryColor}" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/change_training_plan_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:gravity="left|center"
                    android:orientation="horizontal">
                    <FrameLayout
                        android:layout_width="@dimen/_40sdp"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_weight="1"
                            app:tint="#ffffff"
                            android:src="@drawable/circle_logo_back"
                            android:customImageTint="@{colorList.buttonColor}" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_17sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_weight="1"
                            android:src="@drawable/reload_arrows_icon"
                            android:customImageTint="@{colorList.buttonTextColor}" />
                    </FrameLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:paddingRight="10dp"
                        android:text="@string/mobile_training_guide_manage_change_training_plan"
                        android:textAlignment="viewStart"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textSize="@dimen/_11sdp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/download_training_plan_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:gravity="left|center"
                    android:orientation="horizontal">
                    <FrameLayout
                        android:layout_width="@dimen/_40sdp"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_weight="1"
                            app:tint="#ffffff"
                            android:src="@drawable/circle_logo_back"
                            android:customImageTint="@{colorList.buttonColor}" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_17sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_weight="1"
                            android:src="@drawable/print_icon"
                            android:customImageTint="@{colorList.buttonTextColor}" />
                    </FrameLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:paddingRight="10dp"
                        android:text="@string/mobile_training_guide_manage_print_training_plan"
                        android:textAlignment="viewStart"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textSize="@dimen/_11sdp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:id="@+id/mobile_training_guide_manage_close"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    android:text="@string/mobile_training_guide_manage_close"
                    android:textAlignment="viewEnd"
                    android:customTextColor="@{colorList.primaryColor}"
                    android:textSize="@dimen/_11sdp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_textview"
                    android:background="#ffffff"
                    android:customBackground="@{colorList.primaryColor}" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/manage_training_guide_card_collapsed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_15sdp"
            android:background="@{colorList.isWhite ? @drawable/card_background_white : @drawable/card_background}"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            android:paddingBottom="@dimen/_15sdp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    style="@style/overview_card_title"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:padding="0dp"
                    android:textSize="@dimen/_10sdp"
                    android:accessibilityHeading="true"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="@string/mobile_training_guide_manage_title" />
                <ImageView
                    android:id="@+id/manage_card_expand_button"
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:minWidth="25dp"
                    android:gravity="center"
                    android:src="@drawable/plus_icon"
                    android:customImageTint="@{colorList.primaryColor}" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@{colorList.isWhite ? @drawable/card_background_white : @drawable/card_background}"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    style="@style/overview_card_title"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:padding="0dp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textSize="@dimen/_10sdp" 
                    android:accessibilityHeading="true"
                    android:text="@string/mobile_training_guide_share_title" />
                <LinearLayout
                    android:id="@+id/training_guide_share_help_button"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:gravity="top|right"
                    android:focusable="false"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:gravity="center"
                        android:layout_marginLeft="-25dp"
                        android:minWidth="25dp"
                        android:src="@drawable/help"
                        android:customImageTint="@{colorList.primaryColor}" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/training_guide_share_expand_button"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:gravity="top|right"
                    android:visibility="gone"
                    android:focusable="false"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:gravity="center"
                        android:layout_marginLeft="-25dp"
                        android:minWidth="25dp"
                        android:src="@drawable/plus_icon"
                        android:customImageTint="@{colorList.primaryColor}" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/share_messages_content"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                <FrameLayout
                    android:id="@+id/share_messages_layout"
                    android:layout_width="@dimen/_240sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                </FrameLayout>
                <LinearLayout
                    android:id="@+id/share_messages_slide_buttons"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:height="@dimen/_15sdp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingTop="12dp"
                    android:paddingBottom="5dp">
                </LinearLayout>
                <LinearLayout
                    android:layout_width="@dimen/_240sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="4">
                    <FrameLayout
                        android:id="@+id/sms_share_button"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_45sdp"
                            android:layout_weight="1"
                            app:tint="#ffffff"
                            android:src="@drawable/circle_logo_back"
                            android:customImageTint="@{colorList.buttonTextColor}" />
                        <ImageView
                            android:contentDescription="@string/mobile_fundraise_sms_share_button_description"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_45sdp"
                            android:layout_weight="1"
                            android:src="@drawable/circle_logo_sms"
                            android:customImageTint="@{colorList.buttonColor}" />
                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/facebook_share_button"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_45sdp"
                            android:layout_weight="1"
                            app:tint="#ffffff"
                            android:src="@drawable/circle_logo_back"
                            android:customImageTint="@{colorList.buttonTextColor}" />
                        <ImageView
                            android:contentDescription="@string/mobile_fundraise_facebook_share_button_description"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_45sdp"
                            android:layout_weight="1"
                            android:src="@drawable/circle_logo_facebook"
                            android:customImageTint="@{colorList.buttonColor}" />
                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/email_share_button"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_45sdp"
                            android:layout_weight="1"
                            app:tint="#ffffff"
                            android:src="@drawable/circle_logo_back"
                            android:customImageTint="@{colorList.buttonTextColor}" />
                        <ImageView
                            android:contentDescription="@string/mobile_fundraise_email_share_button_description"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_45sdp"
                            android:layout_weight="1"
                            android:src="@drawable/circle_logo_email"
                            android:customImageTint="@{colorList.buttonColor}" />
                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/linkedin_share_button"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_45sdp"
                            android:layout_weight="1"
                            app:tint="#ffffff"
                            android:src="@drawable/circle_logo_back"
                            android:customImageTint="@{colorList.buttonTextColor}" />
                        <ImageView
                            android:contentDescription="@string/mobile_fundraise_linkedin_share_button_description"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_45sdp"
                            android:layout_weight="1"
                            android:src="@drawable/circle_logo_linkedin"
                            android:customImageTint="@{colorList.buttonColor}" />
                    </FrameLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:id="@+id/mobile_training_guide_share_close"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="5dp"
                        android:text="@string/mobile_training_guide_close"
                        android:textAlignment="viewEnd"
                        android:customTextColor="@{colorList.primaryColor}"
                        android:textSize="@dimen/_11sdp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv_textview"
                        android:background="#ffffff"
                        android:customBackground="@{colorList.primaryColor}" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_15sdp"
            android:background="@{colorList.isWhite ? @drawable/card_background_white : @drawable/card_background}"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingBottom="@dimen/_5sdp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|top"
                android:orientation="horizontal">
                    <TextView
                        android:id="@+id/calendar_title"
                        style="@style/overview_card_title"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:padding="0dp"
                        android:textStyle="bold"
                        android:textSize="@dimen/_10sdp"
                        android:accessibilityHeading="true"
                        android:layout_weight="1000"/>
                    <LinearLayout
                        android:id="@+id/calendar_today_button" 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/mobile_training_guide_calendar_today_button"
                            android:textAlignment="viewEnd"
                            android:textColor="?colorPrimary"
                            android:textSize="@dimen/_10sdp"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_centerVertical="true"
                            android:background="?colorPrimary" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/training_guide_calendar_help_button"
                        android:layout_width="@dimen/_14sdp"
                        android:layout_height="@dimen/_14sdp"
                        android:gravity="top|right"
                        android:focusable="false"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="@dimen/_12sdp"
                            android:layout_height="@dimen/_12sdp"
                            android:gravity="center"
                            android:layout_marginLeft="-25dp"
                            android:minWidth="25dp"
                            android:src="@drawable/help"
                            app:srcCompat="@drawable/help"
                            android:customImageTint="@{colorList.primaryColor}" />
                    </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/training_guide_calendar_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="?colorPrimary"/>
            </LinearLayout>
            <com.nuclavis.rospark.customcalendar.CustomCalendar
                android:id="@+id/custom_calendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:row_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <LinearLayout
                android:id="@+id/calendar_slide_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="12dp"
                android:paddingBottom="5dp">
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>