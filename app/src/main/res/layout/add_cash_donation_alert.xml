<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<data>
    <variable name="colorList" type="com.nuclavis.rospark.ColorList" />
</data>
<androidx.constraintlayout.widget.ConstraintLayout  
xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight=".85"
    android:elevation="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/alert_background"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/_7sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:gravity="center"
            android:weightSum="10"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:padding="@dimen/_5sdp"
                    android:weightSum="10">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="17dp"
                        android:customImageTint="@{colorList.primaryColor}"
                        android:src="@drawable/close_x_icon"
                        android:id="@+id/add_cash_donation_alert_close_button"
                        android:layout_weight="1"
                        android:focusableInTouchMode="true"
                        android:contentDescription="@string/mobile_close_modal" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:padding="@dimen/_5sdp"
                    android:id="@+id/add_cash_donation_alert_heading"
                    android:accessibilityLiveRegion="1"
                    android:weightSum="10">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="9"
                        android:paddingRight="5dp"
                        android:paddingBottom="5dp"
                        android:text="@string/mobile_donations_add_cash_donation_title"
                        android:customTextColor="@{colorList.primaryColor}"
                        android:textStyle="bold"
                        android:textSize="@dimen/_12sdp"/> 
                    <TextView
                        android:text="@string/mobile_alert_close_button"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:accessibilityLiveRegion="1"/>
                </LinearLayout>
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp"
                android:weightSum="10">
                <LinearLayout
                    android:labelFor="@+id/cash_donation_first_name_input"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="left"
                    android:contentDescription="@{@string/mobile_donations_add_cash_donation_first_name + @string/mobile_donations_add_cash_donation_required}"
                    android:orientation="horizontal"
                    android:weightSum="10">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="0dp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:textSize="@dimen/_10sdp"
                        android:text="@string/mobile_donations_add_cash_donation_first_name" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="0dp"
                        android:text="*"
                        android:customTextColor="@{colorList.primaryColor}"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="bold" />
                </LinearLayout>
                <EditText
                    android:id="@+id/cash_donation_first_name_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:background="@{colorList.isWhite ? @drawable/rounded_input_black_border : @drawable/white_rounded_input}"
                    android:inputType="text"
                    android:maxLines="1"
                    android:radius="10dp"
                    android:textColor="#000"
                    android:textSize="@dimen/_11sdp"
                    tools:ignore="SpeakableTextPresentCheck"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp"
                android:weightSum="10">
                <LinearLayout
                    android:labelFor="@+id/cash_donation_last_name_input"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="left"
                    android:contentDescription="@{@string/mobile_donations_add_cash_donation_last_name + @string/mobile_donations_add_cash_donation_required}"
                    android:orientation="horizontal"
                    android:weightSum="10">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="0dp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:textSize="@dimen/_10sdp"
                        android:text="@string/mobile_donations_add_cash_donation_last_name" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="0dp"
                        android:text="*"
                        android:customTextColor="@{colorList.primaryColor}"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="bold" />
                </LinearLayout>
                <EditText
                    android:id="@+id/cash_donation_last_name_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:background="@{colorList.isWhite ? @drawable/rounded_input_black_border : @drawable/white_rounded_input}"
                    android:inputType="text"
                    android:maxLines="1"
                    android:radius="10dp"
                    android:textColor="#000"
                    android:textSize="@dimen/_11sdp"
                    tools:ignore="SpeakableTextPresentCheck"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp"
                android:weightSum="10">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="left"
                    android:labelFor="@+id/cash_donation_amount_input"
                    android:contentDescription="@{@string/mobile_donations_add_cash_donation_amount + @string/mobile_donations_add_cash_donation_required}"
                    android:orientation="horizontal"
                    android:weightSum="10">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="0dp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:textSize="@dimen/_10sdp"
                        android:text="@string/mobile_donations_add_cash_donation_amount" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="0dp"
                        android:text="*"
                        android:customTextColor="@{colorList.primaryColor}"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="bold" />
                </LinearLayout>
                <EditText
                    android:id="@+id/cash_donation_amount_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:contentDescription="@string/mobile_donations_add_cash_donation_amount_default_content_description"
                    android:background="@{colorList.isWhite ? @drawable/rounded_input_black_border : @drawable/white_rounded_input}"
                    android:inputType="text"
                    android:maxLines="1"
                    android:radius="10dp"
                    android:textColor="#000"
                    android:textSize="@dimen/_11sdp"
                    tools:ignore="SpeakableTextPresentCheck"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/add_cash_donation_amount_error"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:accessibilityLiveRegion="1"
                android:orientation="horizontal"
                android:contentDescription="@string/mobile_donations_add_cash_donation_amount_error_talkback_description"
                android:weightSum="10">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:accessibilityLiveRegion="1"
                    android:textStyle="italic"
                    android:textColor="#e00000"
                    android:text="@string/mobile_donations_add_cash_donation_amount_error"
                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:weightSum="10">
                <Button
                    android:id="@+id/add_cash_donation_save_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:paddingLeft="10dp"
                    android:paddingTop="8dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="8dp"
                    android:text="@string/mobile_donations_add_cash_donation_save"
                    android:textAlignment="center"
                    android:customTextColor="@{colorList.buttonTextColor}"
                    android:customBackgroundTintColor="@{colorList.buttonColor}"
                    android:textSize="@dimen/_11sdp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>