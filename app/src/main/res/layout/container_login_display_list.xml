<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
<data>
    <variable name="colorList" type="com.nuclavis.rospark.ColorList" />
</data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">
    <TextView
        android:visibility="gone"
        android:id="@+id/page_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:fillViewport="true"
        android:padding="0dp">
        <ImageView
            android:id="@+id/page_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|top"
            android:orientation="vertical"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"></ImageView>
        <ScrollView
            android:layout_width="match_parent"
            android:background="@{colorList.isWhite ? @drawable/standard_login_card : @drawable/card_background_white}"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">
            <FrameLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:weightSum="10"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:layout_marginTop="15dp"
                        android:text="@string/mobile_container_app_connect_display_list_title"
                        android:textAlignment="center"
                        android:customTextColor="@{colorList.primaryColor}"
                        android:textSize="@dimen/_21sdp"
                        android:textStyle="bold" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:weightSum="10"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/container_login_display_list_page_layout"
                            android:layout_width="0dp"
                            android:layout_weight="9.5"
                            android:layout_height="wrap_content"
                            android:gravity="center|top"
                            android:orientation="vertical"
                            android:padding="@{colorList.isWhite ? @dimen/twenty : @dimen/zero}"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent">
                            
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout 
                    android:id="@+id/alert_container"
                    android:clickable="true"
                    android:weightSum="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#90000000"
                    android:gravity="center">
                </LinearLayout>
            </FrameLayout>
        </ScrollView>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>