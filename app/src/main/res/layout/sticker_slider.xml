<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="colorList" type="com.nuclavis.rospark.ColorList" />
    </data>
     <LinearLayout
        android:id="@+id/btn_registration_container"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
                android:layout_width="@dimen/_240sdp"
                android:layout_height="wrap_content"
                android:text="@string/mobile_games_sticker_subtitle"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="@dimen/_13sdp" />

        <LinearLayout
            android:layout_width="@dimen/_240sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"                
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="4">


        <Button
            android:id="@+id/sticker_button"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40sdp"
            android:layout_weight="2"
            android:gravity="center"
            android:padding="@dimen/_8sdp"
            android:text="@string/mobile_games_get_sticker"
            android:textAllCaps="false"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:customTextColor="@{colorList.buttonTextColor}"
            android:customBackgroundTintColor="@{colorList.buttonColor}" />


        </LinearLayout>


    </LinearLayout>
</layout>
