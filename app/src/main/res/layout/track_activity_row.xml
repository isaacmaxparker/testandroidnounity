<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="colorList" type="com.nuclavis.rospark.ColorList" />
    </data>
    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="@dimen/_5sdp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="0dp"
            android:layout_marginTop="0dp"
            android:weightSum="10">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:paddingRight="5dp"
                android:text="Today"
                android:textColor="#000000"
                android:textSize="@dimen/_10sdp" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.75"
                android:paddingRight="5dp"
                android:text="15,000"
                android:textColor="#000000"
                android:textSize="@dimen/_10sdp" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.75"
                android:paddingRight="5dp"
                android:text="3 Workouts"
                android:textColor="#000000"
                android:textSize="@dimen/_10sdp" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.75"
                android:paddingRight="5dp"
                android:textColor="#000000"
                android:textSize="@dimen/_10sdp" />    
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingRight="5dp"
                android:text="100"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="@dimen/_10sdp" />
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/_12sdp"
                android:minWidth="25dp"
                android:gravity="center"
                android:src="@drawable/plus_icon"
                android:customImageTint="@{colorList.primaryColor}" />
        </LinearLayout>
        <LinearLayout
            android:background="#d9d6cd"
            android:customBackground="@{colorList.primaryColor}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="10dp"
            android:weightSum="10">
            <LinearLayout
                android:layout_marginTop="-1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="1"/>
                <ImageView
                    android:layout_width="@dimen/_52sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:gravity="center"
                    android:src="@drawable/upside_down_triangle"
                    app:tint="?colorSecondary" />
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="0dp"
                android:layout_marginTop="0dp"
                android:weightSum="10">

            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="12dp"
                android:paddingBottom="15dp"
                android:height="@dimen/_15sdp">

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>