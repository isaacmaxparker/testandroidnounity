<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="colorList" type="com.nuclavis.rospark.ColorList" />
    </data>
    <LinearLayout 
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/_15sdp">
        <View
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_textview"
            android:background="#ffffff"
            android:customBackground="@{colorList.primaryColor}" />
        <FrameLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal"
            android:weightSum="10"
            android:padding="7dp"
            android:layout_marginBottom="@dimen/_2sdp">
            <ImageView
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:alpha="0.5"
                android:layout_marginLeft="-105dp"
                android:gravity="left"
                android:rotation="20"
                android:src="@drawable/heart_icon"
                app:srcCompat="@drawable/heart_icon"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout 
                    android:layout_width="0dp"
                    android:layout_weight="8.5"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/_15sdp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="5dp"
                        android:layout_marginTop="4dp"
                        android:textStyle="bold"
                        android:text=""
                        android:textAlignment="viewStart"
                        android:customTextColor="@{colorList.primaryColor}"
                        android:textSize="@dimen/_11sdp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="5dp"
                        android:layout_marginTop="4dp"
                        android:text=""
                        android:textAlignment="viewStart"
                        android:textColor="#000"
                        android:textSize="@dimen/_10sdp" />
                    <LinearLayout 
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|center"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/_13sdp">
                        <ImageView
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_10sdp"
                            android:layout_marginRight="5dp"
                            android:gravity="center"
                            android:minWidth="25dp"
                            android:src="@drawable/info_circle_icon"
                            app:srcCompat="@drawable/info_circle_icon"
                            app:tint="#176cff" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingRight="5dp"
                            android:text="@string/mobile_overview_autism_kindness_card_additional_resources"
                            android:textAlignment="viewStart"
                            android:textColor="#176cff"
                            android:textSize="@dimen/_10sdp" />
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="5dp"
                        android:lineSpacingExtra="4sp"
                        android:layout_marginTop="4dp"
                        android:text="Check out our Resources Page for a Kindness Thank You Card Template"
                        android:textAlignment="viewStart"
                        android:textColor="#000"
                        android:textSize="@dimen/_10sdp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1.5"
                    android:gravity="center|top"
                    android:layout_width="0dp"
                    android:padding="5dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginRight="5dp"
                        android:gravity="center"
                        android:src="@drawable/empty_circle_icon"
                        app:srcCompat="@drawable/empty_circle_icon"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginRight="5dp"
                        android:gravity="center"
                        android:src="@drawable/check_circle"
                        app:srcCompat="@drawable/check_circle"/>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</layout>