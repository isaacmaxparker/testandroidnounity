<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<data>
    <variable name="colorList" type="com.nuclavis.rospark.ColorList" />
</data>
<LinearLayout
    android:id="@+id/overview_cpr_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@{colorList.isWhite ? @drawable/card_background_white : @drawable/card_background}"
    android:orientation="vertical"
    android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            style="@style/overview_card_title"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:padding="0dp"
            android:textStyle="bold"
            android:textSize="@dimen/_10sdp"
            android:layout_weight="1"
            android:accessibilityHeading="true"
            android:text="@string/mobile_overview_cpr_card_title" 
            android:textAllCaps="true" />
        <LinearLayout
            android:id="@+id/overview_cpr_help_button"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:gravity="top|right"
            android:focusable="false"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:gravity="center"
                android:layout_marginLeft="-25dp"
                android:minWidth="25dp"
                android:src="@drawable/help"
                android:customImageTint="@{colorList.primaryColor}" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:weightSum="10">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            android:id="@+id/overview_cpr_text"
            android:paddingRight="10dp"
            android:textColor="#000000"
            android:textSize="@dimen/_11sdp" />
        <ImageView
            android:id="@+id/overview_cpr_image"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:scaleType="centerCrop"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:weightSum="10">
        <Button
            android:id="@+id/overview_cpr_btn"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40sdp"
            android:layout_weight="7"
            android:gravity="center"
            android:padding="@dimen/_8sdp"
            android:text="@string/mobile_overview_cpr_card_button"
            android:textAllCaps="true"
            android:textSize="@dimen/_12sdp"
            android:customTextColor="@{colorList.buttonTextColor}"
            android:customBackgroundTintColor="@{colorList.buttonColor}" 
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>
</layout>