<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<data>
    <variable name="colorList" type="com.nuclavis.rospark.ColorList" />
</data>
<androidx.constraintlayout.widget.ConstraintLayout  
xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight=".85"
    android:elevation="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/alert_background"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/_7sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:gravity="center"
            android:weightSum="10"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:padding="@dimen/_5sdp"
                    android:weightSum="10">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="17dp"
                        android:customImageTint="@{colorList.primaryColor}"
                        android:src="@drawable/close_x_icon"
                        android:id="@+id/add_donation_alert_close_button"
                        android:layout_weight="1"
                        android:focusableInTouchMode="true"
                        android:contentDescription="@string/mobile_close_modal" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:padding="@dimen/_5sdp"
                    android:id="@+id/add_donation_alert_heading"
                    android:accessibilityLiveRegion="1"
                    android:weightSum="10">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="9"
                        android:paddingRight="5dp"
                        android:paddingBottom="5dp"
                        android:text="@string/mobile_manage_school_students_add_donation_modal_title"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:textSize="@dimen/_10sdp"/> 
                    <TextView
                        android:text="@string/mobile_alert_close_button"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:accessibilityLiveRegion="1"/>
                </LinearLayout>
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:orientation="vertical"
                android:weightSum="10">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="10">
                    <TextView
                        android:id="@+id/add_donation_student_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="First Last"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:textSize="@dimen/_10sdp"/> 
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="10">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mobile_manage_school_students_add_donation_modal_teacher"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:paddingRight="5dp"
                        android:textSize="@dimen/_10sdp"/> 
                    <TextView
                        android:id="@+id/add_donation_student_teacher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Teacher"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:textSize="@dimen/_10sdp"/> 
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="10">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mobile_manage_school_students_add_donation_modal_grade"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:paddingRight="5dp"
                        android:textSize="@dimen/_10sdp"/> 
                    <TextView
                        android:id="@+id/add_donation_student_grade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="asdffdaasdffdsa"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:textSize="@dimen/_10sdp"/> 
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp"
                android:weightSum="10">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:padding="0dp"
                    android:layout_marginBottom="5dp"
                    android:textStyle="bold"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="#000"
                    android:text="@string/mobile_manage_school_students_add_donation_modal_offline_check" />
                <EditText
                    android:id="@+id/donation_offline_check_input"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:background="@{colorList.isWhite ? @drawable/rounded_input_black_border : @drawable/white_rounded_input}"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:hint="0.00"
                    android:radius="10dp"
                    android:textColor="#000"
                    android:textSize="@dimen/_11sdp"
                    tools:ignore="SpeakableTextPresentCheck"/>
            </LinearLayout>
            <TextView
                android:id="@+id/add_donation_check_error_message"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="0dp"
                android:visibility="gone"
                android:textAlignment="center"
                android:layout_marginBottom="5dp"
                android:textSize="@dimen/_10sdp"
                android:textColor="#ff0000"
                android:text="@string/mobile_manage_school_students_add_donation_modal_amount_valid" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp"
                android:weightSum="10">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:padding="0dp"
                    android:layout_marginBottom="5dp"
                    android:textStyle="bold"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="#000"
                    android:text="@string/mobile_manage_school_students_add_donation_modal_offline_cash" />
                <EditText
                    android:id="@+id/donation_offline_cash_input"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:background="@{colorList.isWhite ? @drawable/rounded_input_black_border : @drawable/white_rounded_input}"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:hint="0.00"
                    android:radius="10dp"
                    android:textColor="#000"
                    android:textSize="@dimen/_11sdp"
                    tools:ignore="SpeakableTextPresentCheck"/>
            </LinearLayout>
            <TextView
                android:id="@+id/add_donation_cash_error_message"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="0dp"
                android:visibility="gone"
                android:textAlignment="center"
                android:layout_marginBottom="5dp"
                android:textSize="@dimen/_10sdp"
                android:textColor="#ff0000"
                android:text="@string/mobile_manage_school_students_add_donation_modal_amount_valid" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:weightSum="10">
                <Button
                    android:id="@+id/add_donation_save_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:paddingLeft="10dp"
                    android:paddingTop="8dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="8dp"
                    android:textStyle="bold"
                    android:text="@string/mobile_manage_school_students_add_donation_modal_save"
                    android:textAlignment="center"
                    android:customTextColor="@{colorList.buttonTextColor}"
                    android:customBackgroundTintColor="@{colorList.buttonColor}"
                    android:textSize="@dimen/_11sdp" />
                <TextView
                    android:id="@+id/add_donation_cancel_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:paddingLeft="10dp"
                    android:paddingTop="8dp"
                    android:paddingRight="10dp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp"
                    android:text="@string/mobile_manage_school_students_add_donation_modal_cancel"
                    android:textAlignment="center"
                    android:customTextColor="@{colorList.buttonColor}"
                    android:textSize="@dimen/_11sdp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>