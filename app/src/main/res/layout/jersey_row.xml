<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="colorList" type="com.nuclavis.rospark.ColorList" />
    </data>
    <TableRow
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:gravity="center"
        android:weightSum="10">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:layout_weight="7"
            android:orientation="vertical">
            <TextView
                android:id="@+id/jersey_row_dedication"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:text="Cassid Smith"
                android:textColor="#000000"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_weight="3"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/jersey_row_edit_jersey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mobile_overview_jersey_edit_jersey_edit"
                    android:textAlignment="viewEnd"
                    android:customTextColor="@{colorList.primaryColor}"
                    android:textSize="@dimen/_12sdp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_textview"
                    android:background="#ffffff"
                    android:customBackground="@{colorList.primaryColor}" />
            </LinearLayout>
        </LinearLayout>
    </TableRow>
</layout>