<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<data>
    <variable name="colorList" type="com.nuclavis.rospark.ColorList" />
</data>
<LinearLayout 
    android:id="@+id/overview_impact_badges_card"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@{colorList.isWhite ? @drawable/card_background_white : @drawable/card_background}"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_marginBottom="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center"
        android:orientation="horizontal"
        android:padding="0dp">
        <TextView
            style="@style/overview_card_title"
            android:layout_width="0dp"
            android:id="@+id/overview_impact_badges_card_title"
            android:layout_weight="10000"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:text="@string/mobile_overview_impact_badges_title"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:accessibilityHeading="true"
            android:textSize="@dimen/_11sdp" />
        <LinearLayout
            android:id="@+id/overview_impact_badges_card_help_button"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:focusable="false"
            android:gravity="top|right"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:gravity="center"
                android:layout_marginLeft="-25dp"
                android:minWidth="25dp"
                android:customImageTint="@{colorList.primaryColor}"
                android:src="@drawable/help"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/mobile_overview_impact_badges_description"
        android:textColor="#000000"
        android:textSize="@dimen/_11sdp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="10">
        <LinearLayout
            android:id="@+id/overview_impact_badges_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:weightSum="10"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/badges_manage_campaign_button"
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="8.5"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="@dimen/_15sdp"
            android:text="@string/mobile_overview_impact_badges_button"
            android:textAllCaps="false"
            android:textSize="@dimen/_12sdp"
            android:customTextColor="@{colorList.buttonTextColor}"
            android:customBackgroundTintColor="@{colorList.buttonColor}" />
    </LinearLayout>
</LinearLayout>
</layout>