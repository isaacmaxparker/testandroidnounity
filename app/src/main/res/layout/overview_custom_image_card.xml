<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<data>
    <variable name="colorList" type="com.nuclavis.rospark.ColorList" />
</data>
<LinearLayout 
    android:id="@+id/overview_local_sponsors_card"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@{colorList.isWhite ? @drawable/card_background_white : @drawable/card_background}"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_marginBottom="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:padding="0dp">
        <TextView
            android:id="@+id/overview_custom_image_card_title"
            style="@style/overview_card_title"
            android:layout_width="0dp"
            android:layout_weight="10000"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:text="@string/mobile_overview_custom_image_title"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:accessibilityHeading="true"
            android:textSize="@dimen/_11sdp" />
        <LinearLayout
            android:id="@+id/overview_custom_image_card_help_button"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:focusable="false"
            android:gravity="top|right"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:gravity="center"
                android:layout_marginLeft="-25dp"
                android:minWidth="25dp"
                android:customImageTint="@{colorList.primaryColor}"
                android:src="@drawable/help"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/overview_custom_image_card_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:padding="0dp"
    >
    </ImageView>
</LinearLayout>
</layout>