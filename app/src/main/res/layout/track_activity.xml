<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
<data>
    <variable name="colorList" type="com.nuclavis.rospark.ColorList" />
</data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.nuclavis.rospark.VerticalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/fitness_disconnected_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_15sdp"
                android:background="@{colorList.isWhite ? @drawable/card_background_white : @drawable/card_background}"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingBottom="@dimen/_15sdp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/overview_card_title"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:padding="0dp"
                        android:textSize="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:accessibilityHeading="true"
                        android:textStyle="bold"
                        android:text="@string/mobile_track_activity_connect_title" 
                        android:textAllCaps="true"/>
                    <LinearLayout
                        android:id="@+id/fitness_connect_help_button"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:gravity="top|right"
                        android:focusable="false"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="@dimen/_12sdp"
                            android:layout_height="@dimen/_12sdp"
                            android:gravity="center"
                            android:layout_marginLeft="-25dp"
                            android:minWidth="25dp"
                            android:src="@drawable/help"
                            android:customImageTint="@{colorList.primaryColor}"/>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="@dimen/_240sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/mobile_track_activity_connect_description"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="@dimen/_13sdp" />

                <LinearLayout
                    android:id="@+id/connect_icons_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="1dp"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/connect_google_fit_button"
                        android:layout_width="@dimen/_75sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_height="@dimen/_67sdp"
                        android:src="@drawable/google_fit_logo" />

                    <ImageView
                        android:id="@+id/connect_android_health_button"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:src="@drawable/health_connect_logo" />

                    <ImageView
                        android:id="@+id/connect_fitbit_button"
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:src="@drawable/fitbit_logo" />

                    <ImageView
                        android:id="@+id/connect_garmin_button"
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:src="@drawable/garmin_logo" />

                    <ImageView
                        android:id="@+id/connect_strava_button"
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="@dimen/_37sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:src="@drawable/strava_button" />


                </LinearLayout>
                <LinearLayout
                    android:id="@+id/connect_icons_first_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="1dp"
                    android:gravity="top|center"
                    android:orientation="horizontal">
                </LinearLayout>
                 <LinearLayout
                    android:id="@+id/connect_icons_second_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="1dp"
                    android:gravity="top|center"
                    android:orientation="horizontal">
                </LinearLayout>
                 <LinearLayout
                    android:id="@+id/connect_icons_third_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="1dp"
                    android:gravity="top|center"
                    android:orientation="horizontal">
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/mobile_track_activity_close"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mobile_track_activity_connect_close"
                        android:textAlignment="viewEnd"
                        android:customTextColor="@{colorList.primaryColor}"
                        android:textSize="@dimen/_11sdp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv_textview"
                        android:background="#ffffff"
                        android:customBackground="@{colorList.primaryColor}" />
                </LinearLayout>
            </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/fitness_connected_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_15sdp"
                android:background="@{colorList.isWhite ? @drawable/card_background_white : @drawable/card_background}"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingBottom="@dimen/_15sdp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/overview_card_title"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:padding="0dp"
                        android:textSize="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:accessibilityHeading="true"
                        android:textStyle="bold"
                        android:text="@string/mobile_track_activity_connect_title" />
                    <LinearLayout
                        android:id="@+id/fitness_connect_help_button_connected"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:gravity="top|right"
                        android:focusable="false"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="@dimen/_12sdp"
                            android:layout_height="@dimen/_12sdp"
                            android:gravity="center"
                            android:layout_marginLeft="-25dp"
                            android:minWidth="25dp"
                            android:src="@drawable/help"
                            android:customImageTint="@{colorList.primaryColor}" />
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="@dimen/_240sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/mobile_track_activity_connected_description"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="@dimen/_13sdp" />
                <LinearLayout
                    android:id="@+id/connected_icons_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="1dp"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/apple_fit_button_connected"
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="@dimen/_67sdp"
                        android:layout_marginRight="@dimen/_30sdp"
                        android:src="@drawable/healthkit_logo" />
                    <ImageView
                        android:id="@+id/google_fit_button_connected"
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="@dimen/_67sdp"
                        android:src="@drawable/google_fit_logo" />
                    <ImageView
                        android:id="@+id/android_health_button_connected"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:src="@drawable/health_connect_logo" />
                    <ImageView
                        android:id="@+id/fitbit_button_connected"
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:src="@drawable/fitbit_logo" />
                    <ImageView
                        android:id="@+id/garmin_button_connected"
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:src="@drawable/garmin_logo" />
                    <ImageView
                        android:id="@+id/strava_button_connected"
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="@dimen/_37sdp"
                        android:src="@drawable/strava_logo" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/connected_icons_first_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="1dp"
                    android:gravity="top|center"
                    android:orientation="horizontal">
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/connected_icons_second_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="1dp"
                    android:gravity="top|center"
                    android:orientation="horizontal">
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/connected_icons_third_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="1dp"
                    android:gravity="top|center"
                    android:orientation="horizontal">
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="1dp"
                    android:gravity="top|center"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <Button
                        android:id="@+id/btn_resync"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_weight="4.5"
                        android:gravity="center"
                        android:padding="@dimen/_8sdp"
                        android:text="@string/mobile_track_activity_resync"
                        android:textAllCaps="false"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold"
                        android:customTextColor="@{colorList.buttonTextColor}"
                        android:customBackgroundTintColor="@{colorList.buttonColor}"
                        app:backgroundTint="@color/primary_color" />
                    <LinearLayout
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:layout_weight=".5"
                    ></LinearLayout>
                    <Button
                        android:id="@+id/btn_disconnect"
                        android:textStyle="bold"
                        android:layout_width="0dp"
                        android:textColor = "#ffffff"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_weight="4.5"
                        android:gravity="center"
                        android:padding="@dimen/_8sdp"
                        android:text="@string/mobile_track_activity_disconnect"
                        android:textAllCaps="false"
                        android:textSize="@dimen/_12sdp"
                        android:customTextColor="@{colorList.buttonTextColor}"
                        android:customBackgroundTintColor="@{colorList.buttonColor}"
                        app:backgroundTint="@color/primary_color" />
                </LinearLayout>

                <TextView
                    android:id="@+id/mobile_track_activity_connected_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:layout_marginTop="10dp"
                    android:textSize="@dimen/_11sdp" />

                <LinearLayout
                    android:id="@+id/mobile_track_activity_close_connected"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="5dp"
                        android:text="@string/mobile_track_activity_connect_close"
                        android:textAlignment="viewEnd"
                        android:customTextColor="@{colorList.primaryColor}"
                        android:textSize="@dimen/_11sdp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv_textview"
                        android:background="#ffffff"
                        android:customBackground="@{colorList.primaryColor}" />
                </LinearLayout>
            </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/fitness_connect_card_collapsed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_15sdp"
                android:background="@{colorList.isWhite ? @drawable/card_background_white : @drawable/card_background}"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingBottom="@dimen/_15sdp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/overview_card_title"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:padding="0dp"
                        android:textSize="@dimen/_10sdp"
                        android:accessibilityHeading="true"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="@string/mobile_track_activity_connect_title" />
                    <ImageView
                        android:id="@+id/fitness_connect_expand_button"
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:minWidth="25dp"
                        android:gravity="center"
                        android:src="@drawable/plus_icon"
                        android:customImageTint="@{colorList.primaryColor}" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/manual_activity_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_15sdp"
                android:background="@{colorList.isWhite ? @drawable/card_background_white : @drawable/card_background}"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingBottom="@dimen/_15sdp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/overview_card_title"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:padding="0dp"
                        android:textSize="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:accessibilityHeading="true"
                        android:text="@string/mobile_track_activity_add_activity_title" />
                        android:textAllCaps="true"/>
                    <LinearLayout
                        android:id="@+id/fitness_manual_help_button"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:gravity="top|right"
                        android:focusable="false"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="@dimen/_12sdp"
                            android:layout_height="@dimen/_12sdp"
                            android:gravity="center"
                            android:layout_marginLeft="-25dp"
                            android:minWidth="25dp"
                            android:customImageTint="@{colorList.primaryColor}"
                            android:src="@drawable/help" />
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/mobile_track_activity_add_activity_description"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="@dimen/_13sdp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:weightSum="10"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp">
                    <Button
                        android:id="@+id/add_manual_activity_button"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:padding="@dimen/_15sdp"
                        android:text="@string/mobile_track_activity_manual_add_button"
                        android:textAllCaps="false"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold"
                        android:customTextColor="@{colorList.buttonTextColor}"
                        android:customBackgroundTintColor="@{colorList.buttonColor}"
                        app:backgroundTint="@color/primary_color" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/earn_points_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@{colorList.isWhite ? @drawable/card_background_white : @drawable/card_background}"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginBottom="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:orientation="horizontal"
                    android:padding="0dp">
                    <TextView
                        style="@style/overview_card_title"
                        android:layout_width="0dp"
                        android:layout_weight="10000"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_11sdp"
                        android:accessibilityHeading="true"
                        android:text="@string/mobile_earn_points_earning_points_title" 
                        android:textAllCaps="true"/>
                    <LinearLayout
                        android:id="@+id/earning_points_activity_points_help_button"
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:gravity="top|right"
                        android:focusable="false"
                        android:visibility="invisible"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="@dimen/_12sdp"
                            android:layout_height="@dimen/_12sdp"
                            android:gravity="center"
                            android:layout_marginLeft="-25dp"
                            android:minWidth="25dp"
                            android:src="@drawable/help"
                            android:customImageTint="@{colorList.primaryColor}" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:orientation="vertical"
                    android:padding="0dp">
                    <FrameLayout
                        android:id="@+id/earn_points_help_messages_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">
                        
                    </FrameLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:orientation="vertical">
                        <Button
                            android:id="@+id/activity_points_view_all"
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="8"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:padding="@dimen/_15sdp"
                            android:text="@string/mobile_challenges_view_activity_points"
                            android:textAllCaps="false"
                            android:textSize="@dimen/_12sdp"
                            android:customTextColor="@{colorList.buttonTextColor}"
                            android:customBackgroundTintColor="@{colorList.buttonColor}" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/earn_points_help_messages_slide_buttons"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:height="@dimen/_15sdp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingTop="12dp"
                        android:paddingBottom="5dp">
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>  
            <LinearLayout
                android:id="@+id/mobile_track_activity_activity_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="@{colorList.isWhite ? @drawable/card_background_white : @drawable/card_background}"
                android:orientation="vertical"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:weightSum="3"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/overview_card_title"
                        android:layout_width="0dp"
                        android:layout_marginTop="3dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:accessibilityHeading="true"
                        android:padding="0dp"
                        android:text="@string/mobile_track_activity_activity_title"
                        android:textSize="@dimen/_10sdp"
                        android:textStyle="bold" 
                        android:textAllCaps="true"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_24sdp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:src="@drawable/activity"
                        android:customImageTint="@{colorList.primaryColor}" />
                    <LinearLayout
                        android:layout_marginTop="3dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="right">
                        <LinearLayout
                            android:id="@+id/fitness_activity_help_button"
                            android:layout_width="@dimen/_24sdp"
                            android:layout_height="@dimen/_24sdp"
                            android:gravity="top|right"
                            android:focusable="false"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="@dimen/_12sdp"
                                android:layout_height="@dimen/_12sdp"
                                android:gravity="center"
                                android:layout_marginLeft="-25dp"
                                android:minWidth="25dp"
                                android:src="@drawable/help"
                                android:customImageTint="@{colorList.primaryColor}" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">
                    <TableRow
                        android:id="@+id/weekly_table_header_row"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/_5sdp"
                        android:weightSum="10">
                        <TextView
                            android:id="@+id/weekly_table_header"
                            android:layout_marginBottom="3dp"
                            android:layout_width="204dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.7"
                            android:paddingRight="5dp"
                            android:text="@string/mobile_track_activity_activity_this_week"
                            android:textColor="#000000"
                            android:textSize="@dimen/_11sdp"
                            android:textStyle="bold" />
                    </TableRow>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:paddingTop="0dp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:layout_marginTop="0dp"
                        android:weightSum="10">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.5"
                            android:paddingLeft="10dp"
                            android:paddingRight="5dp"
                            android:textStyle="bold"
                            android:text="@string/mobile_track_activity_activity_card_date"
                            android:customTextColor="@{colorList.primaryColor}"
                            android:textSize="@dimen/_9sdp" />
                        <TextView
                            android:id="@+id/track_activity_card_steps_header"
                            android:layout_width="0dp"
